<h1> Create a new Cat </h1>
<form action = "<%= cats_url %>" method="POST">

<label for="name">Name</label>
<input id="name" type="text" name="cat[name]">

<input type="radio" id="male" name="cat[sex]" value="M"> 
<label for="male">Male</label><br>
<input type="radio" id="female" name="cat[sex]" value="F">
<label for="female">Female</label><br>

<select id="color" name="cat[color]">
    <option disabled selected>--Please Select--</option>
    <option value="red">Red</option>
    <option value="blue">Blue</option>
</select>

<label for="birthday">Birthday:</label>
<input type ="date" id="birthday" name="cat[birth_date]">

<label for="description">Write Description:</label>
<textarea id="description" name="cat[description]" rows = "4" cols = "33">

</textarea>



